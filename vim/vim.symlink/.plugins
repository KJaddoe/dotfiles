" load plugins
call plug#begin('~/.vim/plugged')

if has('nvim')
  Plug 'Shougo/deoplete.nvim', { 'do': ':UpdateRemotePlugins' }
else
  Plug 'Shougo/deoplete.nvim'
  Plug 'roxma/nvim-yarp'
  Plug 'roxma/vim-hug-neovim-rpc'
endif

Plug 'scrooloose/nerdtree'
Plug 'scrooloose/nerdcommenter'
Plug 'tmhedberg/matchit'
Plug 'scrooloose/syntastic'
Plug 'flazz/vim-colorschemes'
Plug 'Raimondi/delimitMate'

" autocompletion
Plug 'SirVer/ultisnips'
Plug 'honza/vim-snippets'
Plug 'Shougo/neosnippet.vim'
Plug 'Shougo/neosnippet-snippets'
"Plug 'carlitux/deoplete-ternjs', { 'do': 'npm install -g tern' }
"Plug 'othree/jspc.vim', { 'for': ['javascript', 'javascript.jsx', 'typescript']  }

Plug 'HerringtonDarkholme/yats.vim'
Plug 'mhartington/nvim-typescript', {'do': ':!npm install -g neovim typescript \|!install.sh \| UpdateRemotePlugins'}
" For Denite features
Plug 'Shougo/denite.nvim'

" syntax
Plug 'genoma/vim-less'
Plug 'digitaltoad/vim-pug'
Plug 'nelsyeung/twig.vim'
"Plug 'leafgarland/typescript-vim'
Plug 'Quramy/vim-js-pretty-template'
Plug 'pangloss/vim-javascript'
Plug 'elzr/vim-json'
Plug 'prettier/vim-prettier', { 'do': 'npm install -g prettier' }

" git integration
Plug 'tpope/vim-fugitive'
Plug 'airblade/vim-gitgutter'"

" airline stuff
Plug 'vim-airline/vim-airline'
Plug 'vim-airline/vim-airline-themes'

call plug#end()
