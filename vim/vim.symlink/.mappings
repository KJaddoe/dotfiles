let mapleader = " "         " Spacebar map leader
nmap , :

" mappings: for long lines over multiple rows, do proper navigation
map j gj
map k gk

" Easier navigations through windows
nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>

" Close the current buffer and move to the previous one
nmap <leader>bq :bp <BAR> bd #<CR>

" Map Ctrl-Backspace to delete the previous word in insert mode.
:imap <C-BS> <C-W>"

" ==================== Fugitive ====================
nnoremap <leader>ga :Git add %:p<CR><CR>
nnoremap <leader>gs :Gstatus<CR>
nnoremap <leader>gp :Gpush<CR>
nnoremap <leader>gc :Gcommit<CR>
vnoremap <leader>gb :Gblame<CR>"

" ==================== Surround ====================
vmap <leader>" S"lvi"
vmap <leader>' S'lvi'
vmap <leader>` S`lvi`
vmap <leader>( S )lvi(
vmap <leader>{ S }lvi{
vmap <leader>[ S ]lvi[
vmap <leader>< S>lvi<

" ==================== NerdTree ====================
noremap <Leader>e :NERDTreeToggle<cr>

" ==================== Autocomplete ====================
autocmd FileType javascript let g:SuperTabDefaultCompletionType = "<c-x><c-o>"
autocmd FileType typescript let g:SuperTabDefaultCompletionType = "<c-x><c-o>"

" ==================== UltiSnips ====================
let g:UltiSnipsExpandTrigger="<C-j>"
"inoremap <expr><TAB>  pumvisible() ? "\<C-n>" : "\<TAB>"

imap <expr> <CR> pumvisible() ? "\<c-y>" : "<Plug>delimitMateCR"
imap kj <Esc>
map <F7> mzgg=G`z
